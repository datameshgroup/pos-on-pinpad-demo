<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="au.com.dmg.terminalposdemo.ActivityShiftReport"
    >

    <TextView
        android:id="@+id/lblShiftNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Shift Number"/>
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/txtShiftNumber"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/edit_text_border"
        android:text="TestShiftNumber"
        android:inputType="text"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:layout_marginBottom="50dp"
        android:theme="@style/AppEditText"/>

    <TextView
        android:id="@+id/lblShiftStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Shift Start"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtShiftStart"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/edit_text_border"
            android:inputType="datetime"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:layout_marginBottom="50dp"
            android:theme="@style/AppEditText"/>
        <ImageView
            android:id="@+id/ivStart"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/ic_calendar"
            android:contentDescription="TODO" />
    </LinearLayout>
    <TextView
        android:id="@+id/lblShiftEnd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Shift End"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtShiftEnd"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/edit_text_border"
            android:inputType="datetime"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:layout_marginBottom="25dp"
            android:theme="@style/AppEditText"/>
        <ImageView
            android:id="@+id/ivEnd"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/ic_calendar"
            android:contentDescription="TODO" />
    </LinearLayout>

    <Button
        android:id="@+id/btnPrintShiftReport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Print shift report"/>

    <Button
        android:id="@+id/btnPrintShiftReportBlank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Print shift report(No input)"/>


</LinearLayout>